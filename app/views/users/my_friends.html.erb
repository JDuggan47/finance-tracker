<%= render "friends/lookup" %>

<% if @friendships.size > 0 %>
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3" class="page-header">
        <h2>My Friends</h2>
      </th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <tbody>
      <% @friendships.each do |friend| %>
        <tr>
          <td><%= friend.full_name %></td>
          <td><%= friend.email %></td>
          <td>
            <%= link_to "View Profile", user_path(friend), class: "btn btn-primary btn-success" %>
          </td>
          <td><%= link_to "Remove Friend", friendship_path(friend), method: :delete,
            data: { confirm: "Are You Sure?" }, class: "btn btn-xs btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </thead>
</table>

<% else %>
  <div class="row col-lg-12">
    <p class="lead">You Don't Have Any Friends Yet! Please Add Some!</p>
  </div>
<% end %>
